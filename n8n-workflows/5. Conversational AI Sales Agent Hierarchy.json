                },
                {
                  "title": "AI Confidence",
                  "value": "{{$json.confidence}}%",
                  "short": true
                },
                {
                  "title": "Customer Message",
                  "value": "{{$json.message}}",
                  "short": false
                },
                {
                  "title": "AI Response Draft",
                  "value": "{{$json.aiResponse}}",
                  "short": false
                }
              ],
              "actions": [
                {
                  "name": "take_over",
